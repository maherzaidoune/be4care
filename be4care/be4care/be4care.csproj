  </ItemGroup>

  <ItemGroup>
    <Folder Include="models\" />
    <Folder Include="viewModels\" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="views\onBoarding\FirstPage.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="views\onBoarding\onBoarding.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="views\onBoarding\SecondPage.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="views\onBoarding\ThirdPage.xaml">
