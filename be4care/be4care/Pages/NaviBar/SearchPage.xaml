<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             CompressedLayout.IsHeadless="True"
             x:Class="be4care.Pages.SearchPage">
    <Grid Padding="10,30,10,10" >
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0" Spacing="10"  Padding="0,0,0,20" CompressedLayout.IsHeadless="True">
            <Label Text="Recherche " FontSize="36" TextColor="Black" HorizontalOptions="Start" VerticalOptions="Center"/>
            <SearchBar Text="{Binding search ,Mode=TwoWay}" Placeholder="..." HorizontalOptions="Fill" />
        </StackLayout>
            <ListView
                Grid.Row="1"
                ItemsSource="{Binding document}"
                RowHeight="90"
                SeparatorColor="LightGray"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="Fill"
                HasUnevenRows="True"
                SelectedItem="{Binding selected}"
                >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell >
                            <StackLayout Orientation="Horizontal" VerticalOptions="Fill" HorizontalOptions="Fill" CompressedLayout.IsHeadless="True"   >
                                <StackLayout  WidthRequest="30" >
                                    <ffimageloading:CachedImage  Source="star.png" IsVisible="{Binding star}" HeightRequest="25" WidthRequest="25"  VerticalOptions="Center" />
                                </StackLayout>
                                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"  >
                                    <StackLayout HeightRequest="82" WidthRequest="72">
                                        <ffimageloading:CachedImage  Source="{Binding url}" DownsampleHeight="80"  DownsampleWidth="70"  HeightRequest="80" WidthRequest="70" HorizontalOptions="Start"  VerticalOptions="Center" CacheType="Memory"  />
                                    </StackLayout>
                                    <StackLayout >
                                        <Label Text="{Binding  date ,StringFormat='{}{0:MM/dd/yyyy}'}" FontSize="16" TextColor="Gray"  VerticalOptions="Center" />
                                        <Label Text="{Binding  type}" FontSize="18" TextColor="Black"  VerticalOptions="Center" />
                                        <Label Text="{Binding  HStructure}" FontSize="16" TextColor="Gray" VerticalOptions="Center" />
                                    </StackLayout>
                                    <ffimageloading:CachedImage  Source="next.png"   HorizontalOptions="EndAndExpand" HeightRequest="20" WidthRequest="20" VerticalOptions="Center" />
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
    </Grid>
</ContentPage>