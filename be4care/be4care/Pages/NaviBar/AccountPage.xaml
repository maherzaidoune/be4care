<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="be4care.Pages.AccountPage">
    <StackLayout Padding="15,30,15,10">
        <Label Text="Mon Compte" TextColor="Black" FontSize="44" HorizontalOptions="StartAndExpand" VerticalOptions="Start"/>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="0,40,0,10">
            <ListView 
                ItemsSource="{Binding views}"
                SelectedItem="{Binding selected}"
                RowHeight="50"
                >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal"  >
                                <Image Source="{Binding image}" HorizontalOptions="Start"  />
                                <Label Text="{Binding label}" FontSize="20" TextColor="Black" VerticalOptions="Center"/>
                                <Image Source="next.png"  HorizontalOptions="EndAndExpand" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </StackLayout>
    </StackLayout>
</ContentPage>