<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="be4care.Pages.SplashPage"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:local="clr-namespace:be4care.MarkupExtensions"
             xmlns:xfg="clr-namespace:XFGloss;assembly=XFGloss">
    <xfg:ContentPageGloss.BackgroundGradient>
        <xfg:Gradient Rotation="45">
            <xfg:GradientStep StepColor="#FF5955" StepPercentage="0" />
            <xfg:GradientStep StepColor="#FF9C6C" StepPercentage=".5" />
            <xfg:GradientStep StepColor="#FFCB7E" StepPercentage="1" />
        </xfg:Gradient>
    </xfg:ContentPageGloss.BackgroundGradient>
  
    <StackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand"  BackgroundColor="Transparent" >
        <ffimageloading:CachedImage Source="{local:EmbeddedImage resourceId=be4care.SharedImages.be4care.png}"  />
        <Label Text="Be4Care"
                   FontSize="44"
               TextColor="White"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                FontAttributes="Bold"/>
            <Label Text="Toute votre santé dans vos mains"
                   FontSize="Large"
                   TextColor="White"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
    </StackLayout>

</ContentPage>